<module id="odata" excludes="gwt" type="standard" package="org.restlet.ext.odata">
	<name>Restlet Extension - OData</name>
	<description>Integration with OData services.</description>
	<distributions>
		<distribution id="classic" />
		<distribution id="maven" />
	</distributions>
	
	<dependencies>
		<dependency type="module" id="core" />
		<dependency type="module" id="atom" />
		<dependency type="module" id="freemarker" excludes="android" />
		<dependency type="module" id="xml" />
		<dependency type="library" id="freemarker" excludes="android" />
	</dependencies>
	<source edition="android">
		<files-sets>
<![CDATA[
         <exclude name="src/main/java/org/restlet/ext/odata/Generator.java" />
         <exclude name="src/main/java/org/restlet/ext/odata/internal/templates/**" />
]]>
		</files-sets>
	</source>
	<source edition="gae">
		<files-sets>
<![CDATA[
         <exclude name="src/main/java/org/restlet/ext/odata/Generator.java" />
         <exclude name="src/main/java/org/restlet/ext/odata/internal/templates/**" />
]]>
		</files-sets>
	</source>
</module>
