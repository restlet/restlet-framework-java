<module id="lucene" excludes="android, gwt" type="integration" package="org.restlet.ext.lucene">
   <name>Restlet Extension - Lucene</name>
   <description>
      Integration with Apache Lucene, Solr and Tika sub-projects.
	</description>
   <distributions>
      <distribution id="classic" />
      <distribution id="maven" />
   </distributions>

   <dependencies>
      <dependency type="library" id="io" />
      <dependency type="library" id="lucene" primary="true" />
      <dependency type="library" id="solr" />
      <dependency type="library" id="tika" />
      <dependency type="module" id="core" />
      <dependency type="module" id="xml" />
   </dependencies>
</module>